{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "node",
      "express",
      "express-session",
      "node-cron"
    ]
  },
  "include": [
    "./**/*.ts"
  ]
}
