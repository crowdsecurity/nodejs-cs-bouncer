{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2016",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
    },
    "include": ["src/**/*", "index.ts","examples/**/*"],
    "exclude": ["node_modules", "dist", "jest.config.ts", "tests"],
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            "rootDir": "."
        }
    }
}
